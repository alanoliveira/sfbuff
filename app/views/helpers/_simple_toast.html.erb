<%= tag.div class:["toast", "align-items-center", "text-bg-#{type}", "border-0"], data: { controller: "toast", **bs_options }, role: "alert" do %>
  <div class="d-flex">
    <div class="toast-body">
      <%= content %>
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
<% end %>
