<form method="GET">
  <div class="row">
    <div class="col-md-3 mb-3">
      <div class="form-floating">
        <%= select_tag(:home_character_id, options_for_character_select(params[:home_character_id]), class: "form-select") %>
        <%= label_tag(:home_character_id) %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="form-floating">
        <%= select_tag(:home_input_type_id, options_for_input_type_select(params[:home_input_type_id]), class: "form-select") %>
        <%= label_tag(:home_input_type_id) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mb-3">
      <div class="form-floating">
        <%= select_tag(:battle_type_id, options_for_battle_type_select(params[:battle_type_id]), class: "form-select") %>
        <%= label_tag(:battle_type_id) %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="form-floating">
        <%= date_field_tag :played_from, params["played_from"], class: "form-control" %>
        <%= label_tag(:played_from) %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="form-floating">
        <%= date_field_tag :played_to, params["played_to"], class: "form-control" %>
        <%= label_tag(:played_to) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= submit_tag t("buttons.search"), name: nil, class: "btn btn-primary" %>
      <%= form_reset_button class: "btn btn-secondary" %>
    </div>
  </div>
</form>
