<div class="text-center col-4">
  <small>
    <% if challenger.master_rating.positive? %>
      <%= challenger.master_rating %> <%= t('buckler.data.league_info.mr').upcase %>
    <% elsif challenger.league_point.positive? %>
      <%= challenger.league_point %> <%= t('buckler.data.league_info.lp').upcase %>
    <% end %>
  </small>
  <div class="d-none d-lg-block fs-1 fw-bold">
    <%= link_to_player challenger.name, challenger.player_sid %>
  </div>
  <div class="d-lg-none d-sm-block fw-bold">
    <%= link_to_player challenger.name, challenger.player_sid %>
  </div>
  <small>
    <%= character challenger.character %> 
    <%= control_type challenger.control_type %> 
  </small>
</div>
