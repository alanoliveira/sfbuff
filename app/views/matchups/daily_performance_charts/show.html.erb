<%= modal_container aria: { label: t("matchups.score_by_date_charts.title") } do %>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-body">
        <% cache @matchup do %>
          <%= render "daily_performance_chart", data: @daily_performance_data %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= modal_dismiss_button class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>

