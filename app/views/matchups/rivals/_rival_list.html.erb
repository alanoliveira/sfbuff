<table class="table table-striped caption-top text-center">
  <caption class="fs-4 text-center">
    <%= title %>
  </caption>
  <thead>
    <tr>
      <th colspan="3">VS</th>
      <th><%= t("attributes.score.total") %></th>
      <th><%= t("attributes.score.wins") %></th>
      <th><%= t("attributes.score.losses") %></th>
      <th><%= t("attributes.score.draws") %></th>
      <th><%= tag.span "Î£", title: t("attributes.score.diff") %></th>
      <th><%= tag.span "%", title: t("attributes.score.ratio") %></th>
    </tr>
  </thead>
  <tbody>
    <% data.each do |item| %>
      <tr>
        <td><%= link_to_fighter item.name, item.fighter_id %></td>
        <td><%= character_name item.character_id %></td> 
        <td><%= input_type_name item.input_type_id %></td>
        <td><%= item.score.total %></td>
        <td><%= item.score.wins %></td>
        <td><%= item.score.losses %></td>
        <td><%= item.score.draws %></td>
        <td><%= score_diff item.score.diff %></td>
        <td><%= score_ratio item.score.ratio %></td>
      </tr>
    <% end %>
  </tbody>
</table>
