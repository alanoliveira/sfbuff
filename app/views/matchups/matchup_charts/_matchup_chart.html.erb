<table class="table table-striped text-center">
  <thead>
    <tr>
      <th colspan="2">VS</th>
      <%= score_table_head %>
    </tr>
  </thead>
  <tbody>
    <% Enums::CHARACTERS.keys.product(Enums::INPUT_TYPES.keys).each do |character_id, input_type_id| %>
      <tr>
        <td><%= character_name character_id %></td>
        <td><%= input_type_name input_type_id %></td>
        <%= score_table_data matchup_chart.score_for(character_id:, input_type_id:) %>
      </tr>
    <% end %>
    <tr>
      <td colspan="2"></td>
      <%= score_table_data matchup_chart.total %>
    </tr>
  </tbody>
</table>
