<%= form_tag false, method: :get, class: "card card-body mb-3" do %>
  <div class="row">
    <label class="col-md-1 mb-3 col-form-label align-self-end"><%= Matchup.human_attribute_name("home") %></label>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">MR</span>
        <%= number_field_tag :home_mr_from, CurrentMatchupFilter.home_mr_from, step: 100, min: 0, autocomplete: false, class: "form-control" %>
        <%= number_field_tag :home_mr_to, CurrentMatchupFilter.home_mr_to, step: 100, min: 0, autocomplete: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">LP</span>
        <%= number_field_tag :home_lp_from, CurrentMatchupFilter.home_lp_from, step: 100, min: 0, autocomplete: false, class: "form-control" %>
        <%= number_field_tag :home_lp_to, CurrentMatchupFilter.home_lp_to, step: 100, min: 0, autocomplete: false, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-md-1 mb-3 col-form-label align-self-end"><%= Matchup.human_attribute_name("away") %></label>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">MR</span>
        <%= number_field_tag :away_mr_from, CurrentMatchupFilter.away_mr_from, step: 100, min: 0, autocomplete: false, class: "form-control" %>
        <%= number_field_tag :away_mr_to, CurrentMatchupFilter.away_mr_to, step: 100, min: 0, autocomplete: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">LP</span>
        <%= number_field_tag :away_lp_from, CurrentMatchupFilter.away_lp_from, step: 100, min: 0, autocomplete: false, class: "form-control" %>
        <%= number_field_tag :away_lp_to, CurrentMatchupFilter.away_lp_to, step: 100, min: 0, autocomplete: false, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-md-1 mb-3 col-form-label align-self-end"><%= Battle.model_name.human %></label>
    <div class="col-md-3 mb-3">
      <%= battle_type_select_tag :battle_type, include_any: true, selected: CurrentMatchupFilter.battle_type, class: "form-select" %>
    </div>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text"><%= t("attributes.played_from") %></span>
        <%= date_field_tag :played_from, CurrentMatchupFilter.played_from, autocomplete: false, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <span class="input-group-text"><%= t("attributes.played_to") %></span>
        <%= date_field_tag :played_to, CurrentMatchupFilter.played_to, autocomplete: false, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= submit_tag t("buttons.filter"), name: "filter", class: "btn btn-primary" %>
        <%= link_to t("buttons.reset"), false, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>
