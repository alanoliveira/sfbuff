<div class="py-3">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @filter, scope: '', url: '', method: :get, class: '', data: { turbo_frame: :_top } do |f| %>
        <div class="row mb-3">
          <div class="col-md-3">
            <%= f.label :player_character, t('.player_character'), class: "form-label" %>
            <%= f.select :player_character, Buckler::CHARACTERS.invert, { include_blank: t('common.option_any') }, { class: 'form-select' } %>
          </div>
          <div class="col-md-3">
            <%= f.label :player_control_type, t('.player_control_type'), class: "form-label" %>
            <%= f.select :player_control_type, Buckler::CONTROL_TYPES.invert, { include_blank: t('common.option_any') }, { class: 'form-select' } %>
          </div>
          <div class="col-md-3">
            <%= f.label :opponent_character, t('.opponent_character'), class: "form-label" %>
            <%= f.select :opponent_character, Buckler::CHARACTERS.invert, { include_blank: t('common.option_any') }, { class: 'form-select' } %>
          </div>
          <div class="col-md-3">
            <%= f.label :opponent_control_type, t('.opponent_control_type'), class: "form-label" %>
            <%= f.select :opponent_control_type, Buckler::CONTROL_TYPES.invert, { include_blank: t('common.option_any') }, { class: 'form-select' } %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-3">
            <%= f.label :battle_type, t('.battle_type'), class: "form-label" %>
            <%= f.select :battle_type, Buckler::BATTLE_TYPES.invert, { include_blank: t('common.option_any') }, { class: 'form-select' } %>
          </div>
          <div class="col-md-3">
            <%= f.label :played_at_from, t('.played_at_from'), class: "form-label" %>
            <%= date_local_field :played_at_from, class: "form-control", value: @filter.played_at_from %>
          </div>
          <div class="col-md-3">
            <%= f.label :played_at_to, t('.played_at_to'), class: "form-label" %>
            <%= date_local_field :played_at_to, class: "form-control", value: @filter.played_at_to %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= submit_tag t("common.filter"), class: "btn btn-primary" %>
            <%= link_to t("common.reset"), url_for(only_path: true), data: { turbo_frame: :_top }, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
