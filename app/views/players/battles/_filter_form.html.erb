<div class="card">
  <div class="card-body">
    <%= form_with model: object, method: :get do |f| %>
      <div class="row mb-3">
        <div class="col-md-3">
          <%= f.label :character, class: "form-label" %>
          <%= f.select :character, options_for_character_select, select_options(include_any: true), class: "form-select" %>
        </div>
        <div class="col-md-3">
          <%= f.label :control_type, class: "form-label" %>
          <%= f.select :control_type, options_for_control_type_select, select_options(include_any: true), class: "form-select" %>
        </div>
        <div class="col-md-3">
          <%= f.label :vs_character, class: "form-label" %>
          <%= f.select :vs_character, options_for_character_select, select_options(include_any: true), class: "form-select" %>
        </div>
        <div class="col-md-3">
          <%= f.label :vs_control_type, class: "form-label" %>
          <%= f.select :vs_control_type, options_for_control_type_select, select_options(include_any: true), class: "form-select" %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3">
          <%= f.label :battle_type, class: "form-label" %>
          <%= f.select :battle_type, options_for_battle_type_select, select_options(include_any: true), class: "form-select" %>
        </div>
        <div class="col-md-3">
          <%= f.label :played_from, class: "form-label" %>
          <%= f.date_field :played_from, class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.label :played_to, class: "form-label" %>
          <%= f.date_field :played_to, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.submit t("buttons.filter"), name: "", class: "btn btn-primary" %>
          <%= link_to t("buttons.reset"), url_for(only_path: true), class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
