<h3><%= @action.model_name.human %></h3>

<%= render 'battles_filter' %>

<%= n_battles_found_alert(@action.battles.total_count) %>

<% if @action.battles.total_count.positive? %>
  <h3><%= t('.rivals') %></h3>
  <%= render 'rivals', rivals: @action.rivals %>

  <h3><%= t('.battles_history') %></h3>
  <%= render 'battles', battles: @action.battles %>
<% end %>
