<div id="<%= dom_id(fighter_search_process) %>">
  <% if fighter_search_process.finished? %>
    <%= empty_alert_unless(fighter_search_process.result.any?) do %>
      <div class="card card-body table-responsive">
        <%= render "fighter_profiles/fighter_profiles_list", fighter_profiles_list: fighter_search_process.result %>
      </div>
    <% end %>
  <% else %>
    <div class="d-flex justify-content-center">
      <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  <% end %>
</div>
